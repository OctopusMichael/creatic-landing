---
import Button from "../components/Button.astro";
---

<section class="flex h-[90vh] justify-between">
  <img src="/images/human.png" alt="human img" />
  <div class="flex flex-col gap-3 items-center text-center px-[150px]">
    <h1 class="text-5xl font-bold">
      WHAT <span class="text-blue">OUR</span> CLIENTS SAY?
    </h1>
    <div class="h-[2px] w-[100px] bg-blue"></div>
    <span class="uppercase">Testimonials</span>
    <div
      class="flex flex-col gap-5 p-[50px] rounded-xl bg-gradient-to-tr from-slate-900 to-black mt-[50px] mb-5"
    >
      <p class="text-start">
        Lorem ipsum Neque porro quisquam est qui do lorem ipsum quia dolor sit
        amet, Neque porro elit
      </p>
      <div class="flex justify-between items-center">
        <div class="flex items-center text-start gap-5">
          <img src="/images/avatar.png" alt="avatar img" />
          <div class="flex flex-col gap-2">
            <h1>Carol Chaves</h1>
            <h2 class="text-slate-600">@caroles.gmail.com</h2>
          </div>
        </div>
        <img src="/icons/Coomas.png" alt="coomas icon" />
      </div>
    </div>
    <Button  title="View all references" />
  </div>
  <img src="/images/cybor.png" alt="human img" />
</section>
